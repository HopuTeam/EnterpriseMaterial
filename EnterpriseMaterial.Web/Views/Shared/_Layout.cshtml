<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EnterpriseMaterial</title>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-md bg-info navbar-dark">
        <a class="navbar-brand" href="/Home/Index">企业物资管理系统</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav" id="navInfo">
                @*目录菜单信息插入标记*@
            </ul>
        </div>
    </nav>
    <br>
    <div class="container">
        @RenderBody()
    </div>
    <br>
    <div class="jumbotron text-center" style="margin-bottom:0">
        <p>Copyright &copy; 2020-@DateTime.Now.Year EnterpriseMaterial</p>
        <p>Powered by <a href="https://github.com/HopuTeam" target="_blank">HopuTeam</a> | Theme base <a href="https://getbootstarp.com" target="_blank">Bootstrap</a> & <a href="https://www.layui.com" target="_blank">Layui</a></p>
    </div>
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Content/layui/layui.all.js"></script>
    <script src="~/Scripts/copyright.js"></script>
    <script>
        $.post("/Home/GetMenu", function (res) {
            for (x in res.mod) {
                if (res.mod[x].parentID == 0) {
                    var info = "<li class='nav-item'><a class='nav-link dropdown-toggle' id='navbardrop' data-toggle='dropdown' href=" + res.mod[x].actionUrl + "><i class='layui-icon " + res.mod[x].menuIcon + "'></i> " + res.mod[x].name + "</a>";
                    for (i in res.mod) {
                        if (res.mod[i].parentID == res.mod[x].id) {
                            info += "<div class='dropdown-menu'><a class='dropdown-item' href=" + res.mod[i].actionUrl + ">" + res.mod[i].name + "</a></div>";
                        };
                    };
                    info += "</li>";
                    $("#navInfo").append(info);
                };
            };
            $("#navInfo").append("<li class='nav-item'><a class='nav-link' href='#Logout' id='Logout'><i class='layui-icon layui-icon-logout'></i> 退出</a></li>");
        });

        $("#Logout").click(function () {
            layer.load(2, { shade: false });
            layer.confirm('确定要退出登录？', {
                btn: ['确定', '取消']
            }, function () {
                $.post("/User/Logout", function (res) {
                    if (res == "success") {
                        layer.alert("您已退出账户！");
                        setTimeout(function () {
                            window.location.href = "/Sign/Index";
                        }, 1500);
                    } else {
                        layer.alert(res);
                    };
                });
            });
            setTimeout(function () {
                layer.closeAll('loading');
            }, 300);
        });
    </script>
    @RenderSection("scripts", false)
</body>
</html>